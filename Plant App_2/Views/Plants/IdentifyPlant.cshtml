
<div class="p-3 mb-2 bg-dark text-white">.bg-dark</div>
<h4>Identify a Plant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IdentifyPlant">
        
            <div class="form-group">
                <!--we got a c# generated form and modified it to turn it into a regular html form-->
                <label class="form-label" for="customFile">Default file input example</label>
                <input type="file" class="form-control" id="plantToIndetify" />

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="plant" id="bark">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Bark/Stem
                    </label>
                    </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="plant" id="flower">
                    <label class="form-check-label" for="flexRadioDefault1">
                        flower
                    </label>
                    </div>

                 <div class="form-check">
                    <input class="form-check-input" type="radio" name="plant" id="leaf">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Leaf
                    </label>
                    </div>
                                
            </div>
            <div class="form-group">
                <input type="submit" value="Identify" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

